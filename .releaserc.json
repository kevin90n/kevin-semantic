{
    "tagFormat": "${version}",
    "branches": [
        "main",
        {
            "name": "beta",
            "prerelease": true
        },
        {
            "name": "alpha",
            "prerelease": true
        }
    ],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/github",
        [
            "@saithodev/semantic-release-backmerge",
              {
                "backmergeBranches": [{"from": "main", "to": "alpha"}, {"from": "main", "to": "beta"}]
              }
        ],
        [
            "@semantic-release/npm",
            {
                "npmPublish": false
            }
        ]
    ],
    "publish": false
}
